<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/switchLevelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:orientation="vertical"
            android:text="@string/switch_level"
            android:textColor="#444444"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="143dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="15dp"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/calcRouteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:orientation="vertical"
            android:text="@string/calc_route"
            android:textColor="#444444"
            tools:layout_conversion_absoluteHeight="48dp"
            tools:layout_conversion_absoluteWidth="127dp"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="15dp"
            tools:ignore="RtlHardcoded" />
    </com.mapbox.mapboxsdk.maps.MapView>

</RelativeLayout>